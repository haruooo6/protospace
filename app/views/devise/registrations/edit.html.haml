%form.container.user-new
  .col-md-8.col-md-offset-2
  = form_for current_user do |f|
    %header.row.user-nav.row
      .col-md-12
        %h2 Edit Profile
        .user-name_image.row
          .user-name.col-md-10
            = f.text_field :nickname, placeholder: "Username"
          .user-image.col-md-2
            %button.btn.btn-primary Change image
            = f.file_field :avatar
        = f.text_field :email, placeholder: "E-mail", class: "user-email"

        = f.password_field :password, placeholder: "Password", class: "user-password"
      .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :group, placehodler: "Member"
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_area :profile, cols: "30", rows: "4", placeholder: "Profile"
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_area :works, cols: "30", rows: "4", placeholder: "Works", value: "#{@user.works}"
        .row.text-center.user-btn
          = f.submit 'Save', class: "btn.btn-lg.btn-primary.btn-block"


