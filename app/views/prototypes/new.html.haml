= form_for(@prototype, html: { class: 'container proto-new' }) do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        .proto-new-title
          = f.text_field :title, placeholder: "Title"
    .row
    = f.fields_for :pictures do |p|
      .col-md-12
        .cover-image-upload
          = p.file_field :thumbnail
          = p.hidden_field :type, value: "main"

      .col-md-12
        %ul.proto-sub-list.list-group
          %li.list-group-item.col-md-4
            .image-upload
              = p.file_field :thumbnail

          %li.list-group-item.col-md-4
            .image-upload
              = p.file_field :thumbnail
          %li.list-group-item.col-md-4
            .image-upload
              = p.file_field :thumbnail
    .row.proto-description
      .col-md-12
        = f.text_field :catchcopy, placeholder: "Catch Copy"
      .col-md-12
        = f.text_area :concept, placeholder: "Concept", cols: "30", rows: "4"
      .col-md-12
        %h4 Tag List
        .row
          .col-md-3
            %input{type: "text", placeholder: "Web Design"}/
          .col-md-3
            %input{type: "text", placeholder: "UI"}/
          .col-md-3
            %input{type: "text", placeholder: "Application"}/
    .row.text-center.proto-btn
      = f.submit 'Publish', class: "button btn btn-lg btn-primary btn-block"  
