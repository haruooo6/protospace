.col-sm-4.col-md-3.proto-content
  .thumbnail
    = link_to image_tag(prototype.pictures[0].thumbnail), prototype_path(prototype)
    - if user_signed_in? && current_user.id == prototype.user_id
      = link_to 'Delete', prototype_path(prototype), method: :delete
      = link_to 'Edit', edit_prototype_path(prototype), method: :get
    .caption
      %h3
      = prototype.title
      .proto-meta
        .proto-user
          = link_to prototype.user.nickname, user_path(prototype.user)
        .proto-posted
          = prototype.created_at.strftime("%b%d")
      %ul.proto-tag-list.list-inline
        %li 
          %a{href: "#", class: "btn btn-default"} iPad
        %li 
          %a{href: "#", class: "btn btn-default"} wireframe
