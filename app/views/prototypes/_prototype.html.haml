.col-sm-4.col-md-3.proto-content
  .thumbnail
  = link_to prototype_path(prototype) do
    = image_tag (prototype.pictures[0] ? prototype.pictures[0].thumbnail : "sample.png")
  .caption
    %h3
    = prototype.title
    .proto-meta
      .proto-user
      = link_to ('#') do
        = prototype.user.nickname
      .proto-posted
        = prototype.created_at.strftime("%b%d")
    %ul.proto-tag-list.list-inline
      %li
        = link_to "iPad", "#", class: 'btn btn-default'
      %li
        = link_to "wireframe", "#", class: 'btn btn-default'
